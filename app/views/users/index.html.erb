<h1 class="text-center mt-4"> Challengers </h1>

<div> 
</div>

<tbody>
    <div>
    <% @users.each do |user| %>
        <div>
            <%= link_to user.username, user %></div>
        <tr>
        <td><%= link_to gravatar_for(user, size: 150), user %></td>
        <td><%= pluralize(user.jabs.count, "jab") %></td>
        <td><%= link_to "View profile", user %></td>
          <% if logged_in? %>
            <% if user == current_user %>
              <%= link_to "Edit profile", edit_user_path(user) %>
              <% end %>
              <% if current_user.admin? %>
              <%= link_to "Delete user", user_path(user), class: "dropdown-item text-danger", method: :delete, data: {confirm: " You sure you wanna ban this fool?"} %>
              <% end %>
            <% end %>
      </tr>
        </tbody>
        </table> 
        <div>
            <small>Joined <%= time_ago_in_words(user.created_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
    </div>

