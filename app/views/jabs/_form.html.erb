<%= render 'shared/errors', obj: @jab %> <%# definig what obj would be in partial if its rednered from for partial new/edit%>

<%# this helps with form building%>
<%= form_with(model: @jab, local: true) do |f| %>
    <p> 
        <%= f.label :title %><br/> 
        <%= f.text_field :title %>
    </p>
    <p>
        <%= f.label :description %><br/> 
        <%= f.text_area :description %> 
    </p>

    <p> 
        <%= f.label :category %><br/>
    <%# text_area give an expandable box%>
        <%= f.collection_select(:category_ids, Category.all, :id, :name, 
    { prompt: "Select category form list(can be empty)"}, { multiple: true, size: 3 }) %>
    </p>
  <p>
    <%= f.submit %> 
  </p>
      <%= link_to '[ Cancel and return to articles listing ]', jabs_path, class: "text-info" %>
<% end %>